        <div class="container">
                <h2>Admin Dashboard</h2>
                <p>kerja lembur bagai khudha.</p>
                <table class="table">
                  <thead>
                    <tr>
                      <th>id</th>
                      <th>buyer</th>
                      <th>item</th>
                    </tr>
                  </thead>
                  <tbody>
                      <% for(let i = 0; i < data.length; i++) { %>
                    <tr>
                        <td><%= data[i].id %></td>
                        <td><%= data[i].email %></td>
                        <td>
                        <% for(let j = 0; j < data[i].Items.length; j++) { %> 
                        <%= j+1 + '. ' + data[i].Items[j].item %><br>
                        <% } %>    
                        </td>    
                    </tr>
                      <% } %>
                  </tbody>
                </table>
